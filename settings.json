{
    // add this to your settings.json, if there are overlapping values delete the old ones
    "workbench.colorCustomizations": {

        "activityBar.background": "#04040E",
        "activityBar.foreground": "#99BBFF",
        "breadcrumb.background": "default",
        "commandCenter.background": "#04040E",
        "editor.background": "#04040E",
        "editorLineNumber.activeForeground": "#99BBFF",
        "editorLineNumber.foreground": "#7585AF",
        "editorCursor.foreground": "#99BBFF",
        "sideBar.background": "#04040E",
        "foreground": "#99BBFF",
        "icon.foreground": "#99BBFF",
        "list.activeSelectionBackground": "#1B3070",
        "editorHoverWidget.background": "#04040E",
        "editor.selectionBackground": "#1B3070",
        "titleBar.activeBackground": "#04040E",
        "commandCenter.activeBackground": "#121222",
        "titleBar.inactiveBackground": "#121222",
        "titleBar.activeForeground": "#99BBFF",
        "menubar.selectionBackground": "#1B3070",
        "toolbar.activeBackground": "#1B3070",
        "toolbar.hoverBackground": "#1B3070",
        "tab.activeBackground": "#121222",
        "tab.inactiveBackground": "#04040E",
        "tab.activeBorder": "#04040E",
        "tab.activeBorderTop": "#99BBFF",
        "tab.border": "#303050",
        "tab.dragAndDropBorder": "#99BBFF",
        "tab.hoverBackground": "#121222",
        "tab.activeForeground": "#99BBFF",
        "tab.inactiveForeground": "#99BBFF",
        "menu.background": "#04040E",
        "editorGroupHeader.tabsBackground": "#04040E"
        
    },
    "editor.formatOnPaste": false,
    "editor.fontSize": 14,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "variable",
                "settings": {
                    "foreground": "#99BBFF"
                }
            },
            {
                "scope": "variable.parameter.function.language.special.self.python",
                "settings": { "foreground": "#5070C0" }
            },
            {
                "scope": "string.quoted.docstring.multi",
                "settings": { "foreground": "#FFAAAA" }
            },
            {
                "scope": "comment",
                "settings": { "foreground": "#FFBFFF" } // like this
            },
            {
                "scope": [
                    "keyword.control",
                ],
                "settings": {
                    "foreground": "#FF7788",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "string.quoted.single, string.quoted.double",
                "settings": { "foreground": "#AFDF9F" }
            },
            {
                "scope": "constant.language, constant.numeric.float, constant.numeric.dec, constant.numeric.integer",
                "settings": { "foreground": "#AFDF9F", "fontStyle": "bold" }
            }
        ],
        "[*Light*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#000"
                    }
                }
            ]
        },
        "[*Dark*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#fff"
                    }
                }
            ]
        }
    },
    "editor.semanticHighlighting.enabled": true,
}
